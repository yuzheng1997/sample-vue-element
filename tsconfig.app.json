{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"composite": true,
		"noImplicitThis": true,
		"lib": ["ES2018", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": [
		"play/**/*",
		"packages/**/*",
		"packages/**/*.vue",
		"packages/utils/**/*",
		"types/**/*.d.ts",
		"node_modules/@types/**/*.d.ts"
	]
}
